<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1024.0" stylesheets="@style/AddBook.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.citybookshop.controller.AddBookController">
   <children>
      <BorderPane prefHeight="720.0" prefWidth="1024.0">

         <center>
            <VBox alignment="CENTER" spacing="0" styleClass="content-area" BorderPane.alignment="CENTER">

               <!-- Page Header -->
               <VBox alignment="CENTER" spacing="6.0" styleClass="page-header">
                  <Label styleClass="header-icon" text="➕" />
                  <Label styleClass="page-title" text="Add New Book" />
                  <Label styleClass="page-subtitle" text="Fill in the details below to add a book to the catalog" />
               </VBox>

               <!-- Form Card -->
               <VBox spacing="20.0" styleClass="form-card">
                  <padding><Insets bottom="32.0" left="36.0" right="36.0" top="32.0" /></padding>

                  <Label prefHeight="52.0" prefWidth="122.0" styleClass="section-label" text="BOOK DETAILS" textFill="#e4dcdc">
                     <font>
                        <Font size="48.0" />
                     </font></Label>

                  <!-- Title -->
                  <VBox spacing="6.0">
                     <Label styleClass="field-label" text="Title" />
                     <TextField fx:id="titleField" prefWidth="420.0" promptText="Enter book title" styleClass="form-field" />
                  </VBox>

                  <!-- Author -->
                  <VBox spacing="6.0">
                     <Label styleClass="field-label" text="Author" />
                     <TextField fx:id="authorField" prefWidth="420.0" promptText="Enter author name" styleClass="form-field" />
                  </VBox>

                  <!-- Price + Quantity -->
                  <HBox spacing="20.0">
                     <VBox spacing="6.0">
                        <Label styleClass="field-label" text="Price (RS)" />
                        <TextField fx:id="priceField" prefWidth="195.0" promptText="0.00" styleClass="form-field" />
                     </VBox>
                     <VBox spacing="6.0">
                        <Label styleClass="field-label" text="Quantity" />
                        <TextField fx:id="quantityField" prefWidth="195.0" promptText="1" styleClass="form-field" />
                     </VBox>
                  </HBox>

                  <!-- Category -->
                  <VBox spacing="6.0">
                     <Label styleClass="field-label" text="Category" />
                     <ComboBox fx:id="categoryCombo" prefWidth="420.0" promptText="Select a category" styleClass="combo-field" />
                  </VBox>

                  <!-- Divider -->
                  <Region prefHeight="8.0" />

                  <!-- Action Buttons -->
                  <HBox alignment="CENTER_LEFT" spacing="14.0">
                     <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAdd" prefHeight="42.0" prefWidth="160.0" styleClass="btn-add" text="✅  Add Book" />
                     <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" prefHeight="42.0" prefWidth="200.0" styleClass="btn-back" text="⬅  Back to Dashboard" />
                  </HBox>

                  <!-- Message Label -->
                  <Label fx:id="messageLabel" styleClass="message-label" text="" />

               </VBox>

            </VBox>
         </center>

      </BorderPane>
   </children>
</AnchorPane>
