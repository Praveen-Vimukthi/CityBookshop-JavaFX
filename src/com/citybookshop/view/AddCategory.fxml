<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="720.0" prefWidth="1024.0"
            stylesheets="@style/AddCategory.css"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.citybookshop.controller.AddCategoryController">
   <children>
      <BorderPane prefHeight="720.0" prefWidth="1024.0">

         <center>
            <VBox styleClass="content-area" alignment="CENTER" spacing="0" BorderPane.alignment="CENTER">

               <!-- Page Header -->
               <VBox styleClass="page-header" alignment="CENTER" spacing="6.0">
                  <Label text="ðŸ·ï¸" styleClass="header-icon"/>
                  <Label text="Add New Category" styleClass="page-title"/>
                  <Label text="Create a new category to organise your book catalog" styleClass="page-subtitle"/>
               </VBox>

               <!-- Form Card -->
               <VBox styleClass="form-card" spacing="20.0">
                  <padding><Insets top="32.0" right="36.0" bottom="32.0" left="36.0"/></padding>

                  <Label text="CATEGORY DETAILS" styleClass="section-label"/>

                  <!-- Name -->
                  <VBox spacing="6.0">
                     <Label text="Name" styleClass="field-label"/>
                     <TextField fx:id="nameField" styleClass="form-field"
                                prefWidth="428.0" promptText="Enter category name"/>
                  </VBox>

                  <!-- Description -->
                  <VBox spacing="6.0">
                     <Label text="Description" styleClass="field-label"/>
                     <TextArea fx:id="descriptionArea" styleClass="form-textarea"
                               prefWidth="428.0" prefRowCount="4"
                               promptText="Enter a short description..." wrapText="true"/>
                  </VBox>

                  <!-- Divider -->
                  <Region prefHeight="6.0"/>

                  <!-- Action Buttons -->
                  <HBox spacing="14.0" alignment="CENTER_LEFT">
                     <Button fx:id="addButton" styleClass="btn-add"
                             text="âœ…  Add Category" prefWidth="170.0" prefHeight="42.0"
                             onAction="#handleAdd" mnemonicParsing="false"/>
                     <Button fx:id="backButton" styleClass="btn-back"
                             text="â¬…  Back to Dashboard" prefWidth="200.0" prefHeight="42.0"
                             onAction="#handleBack" mnemonicParsing="false"/>
                  </HBox>

                  <!-- Message Label -->
                  <Label fx:id="messageLabel" styleClass="message-label" text=""/>

               </VBox>

            </VBox>
         </center>

      </BorderPane>
   </children>
</AnchorPane>
