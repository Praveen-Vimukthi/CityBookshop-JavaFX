<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1024.0" stylesheets="@style/Account.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.citybookshop.controller.AccountController">
   <children>
      <BorderPane prefHeight="720.0" prefWidth="1024.0">

         <center>
            <VBox alignment="CENTER" spacing="0" styleClass="content-area" BorderPane.alignment="CENTER">

               <!-- Page Header -->
               <VBox alignment="CENTER" spacing="6.0" styleClass="page-header">
                  <Label styleClass="header-icon" text="ðŸ‘¤" />
                  <Label styleClass="page-title" text="Create New Account" textFill="#58df33" />
                  <Label styleClass="page-subtitle" text="Set up credentials and assign a role for the new user">
                     <font>
                        <Font size="11.0" />
                     </font></Label>
               </VBox>

               <!-- Form Card -->
               <VBox spacing="20.0" styleClass="form-card">
                  <padding><Insets bottom="32.0" left="36.0" right="36.0" top="32.0" /></padding>

                  <Label styleClass="section-label" text="ACCOUNT DETAILS" />

                  <!-- Username -->
                  <VBox spacing="6.0">
                     <Label styleClass="field-label" text="Username" />
                     <TextField fx:id="usernameField" prefWidth="428.0" promptText="Enter username" styleClass="form-field" />
                  </VBox>

                  <!-- Password -->
                  <VBox spacing="6.0">
                     <Label styleClass="field-label" text="Password" />
                     <PasswordField fx:id="passwordField" prefWidth="428.0" promptText="Enter password" styleClass="form-field" />
                  </VBox>

                  <!-- Confirm Password -->
                  <VBox spacing="6.0">
                     <Label styleClass="field-label" text="Confirm Password" />
                     <PasswordField fx:id="confirmPasswordField" prefWidth="428.0" promptText="Re-enter password" styleClass="form-field" />
                  </VBox>

                  <!-- Role -->
                  <VBox spacing="6.0">
                     <Label styleClass="field-label" text="Role" />
                     <ComboBox fx:id="roleCombo" prefWidth="428.0" promptText="Select role" styleClass="combo-field" />
                  </VBox>

                  <!-- Divider -->
                  <Region prefHeight="6.0" />

                  <!-- Action Buttons -->
                  <HBox alignment="CENTER_LEFT" spacing="14.0">
                     <Button fx:id="createButton" mnemonicParsing="false" onAction="#handleCreate" prefHeight="42.0" prefWidth="180.0" styleClass="btn-create" text="âœ…  Create Account" />
                     <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" prefHeight="42.0" prefWidth="200.0" styleClass="btn-back" text="â¬…  Back to Dashboard" />
                  </HBox>

                  <!-- Message Label -->
                  <Label fx:id="messageLabel" styleClass="message-label" text="" />

               </VBox>

            </VBox>
         </center>

      </BorderPane>
   </children>
</AnchorPane>
